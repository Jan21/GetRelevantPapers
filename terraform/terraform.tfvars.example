aws_region     = "us-east-1"
environment    = "prod"
app_name       = "getrelevantpapers"
container_port = 3444

# Instance configuration
instance_type    = "t3.medium"
min_capacity     = 1
max_capacity     = 3
desired_capacity = 1

# Health check
health_check_path = "/"

# AWS Bedrock
enable_bedrock = true

# Security - IMPORTANT: Restrict this in production!
allowed_cidr_blocks = ["0.0.0.0/0"]  # Change to your IP: ["YOUR_IP/32"]

# Optional domain
domain_name = ""

